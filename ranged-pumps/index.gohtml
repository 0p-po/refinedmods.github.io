{{- /*gotype: github.com/refinedmods/sitegen/render.ProjectIndex*/ -}}
{{define "body"}}
    <div class="jumbotron bg-light pt-4 pb-4 mb-4">
        <div class="container">
            <div class="d-flex">
                <div class="pump me-4">
                    <img src="/assets/ranged-pumps/pump.png" class="img-thumbnail">
                </div>
                <div>
                    <p class="lead">Ranged Pumps is a simple mod that adds a pump that pumps liquids in a range.</p>

                    <a class="btn btn-primary btn-lg" href="/ranged-pumps/wiki/getting-started.html" role="button">Get started</a>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="accordion mb-4" id="content-accordion">
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="content-accordion-blocks-heading">
                            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#content-accordion-blocks" aria-expanded="true" aria-controls="content-accordion-blocks">
                                Blocks
                            </button>
                        </h2>
                        <div id="content-accordion-blocks" class="accordion-collapse collapse show" aria-labelledby="content-accordion-blocks-heading" data-bs-parent="#content-accordion">
                            <div class="accordion-body">
                                {{wikiIcon .Project "Pump"}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                {{if .Project.LatestStableRelease}}
                    <div class="card mb-4">
                        <div class="card-header">
                            Latest stable release
                        </div>
                        <div class="card-body text-center">
                            <h5 class="card-title">{{.Project.Name}} {{.Project.LatestStableRelease.Version}}</h5>
                            <p class="card-text">{{.Project.LatestStableRelease.Group.Name}}</p>
                            <a href="/{{.Project.Slug}}/releases/{{.Project.LatestStableRelease.Slug}}"
                               class="btn btn-primary">Download</a>
                        </div>
                    </div>
                {{end}}

                <div class="card">
                    <div class="card-header">
                        Latest releases
                    </div>
                    <div class="card-body p-0 m-0">
                        <div class="list-group list-group-flush">
                            {{range .Project.ReleaseGroupsReversed}}
                                {{if .Featured}}
                                    <a class="list-group-item list-group-item-action"
                                       href="/{{$.Project.Slug}}/releases/{{.LatestRelease.Slug}}">
                                        <div class="d-flex justify-content-between">
                                            <strong>{{.Name}}</strong>

                                            <div class="mt-sm">
                                                <span class="fa fa-download mt-sm"></span>
                                            </div>
                                        </div>
                                        <p class="mb-0">{{ template "release-badge.gohtml" .LatestRelease  }}
                                            {{$.Project.Name}} {{.LatestRelease.Version}}</p>
                                    </a>
                                {{end}}
                            {{end}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{{end}}